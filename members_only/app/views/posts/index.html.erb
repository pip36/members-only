<%= link_to "home", root_url %>
<h1> All Posts </h1>


<% @posts.reverse_each do |post| %>

  <%= post.name %>
  <br>
  <%= post.body %>
  <br>
  <% if logged_in? %>
    <%= "written by: #{post.user.name}" %>
    <br>
    <%else%>
    <%= "Anonymous" %>
  <% end %>
  <p> ----------------------------------------------------------- </p>
<% end %>
